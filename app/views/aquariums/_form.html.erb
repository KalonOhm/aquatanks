    <%#= form.text_field :user_id %>
  <%# </div> %>

<br>
  <button type="button" >
    <%= form.submit class: "text-xs inline-block rounded bg-teal-700 dark:bg-teal-500 px-3 pt-2 pb-1.5 mt-1.5 self-end  " %>
  </button>
<% end %>
