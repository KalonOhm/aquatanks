<header class="sticky top-0 z-10 bg-teal-700 text-white dark:bg-teal-500 dark:text-cyan-100">
  <section class="mx-auto flex max-w-4xl items-center justify-between p-4">
    <h1 class="text-3xl font-semibold"> <%= link_to 'Aquatanks 🐠', root_path %> </h1>
    <div>
      <button
        id="hamburger-button"
        class="relative h-8 w-8 cursor-pointer text-3xl md:hidden"
      >
        <div
          class="translation-all absolute top-4 -mt-0.5 h-1 w-8 rounded bg-white duration-500 before:absolute before:h-1 before:w-8 before:-translate-x-4 before:-translate-y-3 before:rounded before:bg-white before:transition-all before:duration-500 before:content-[''] after:absolute after:h-1 after:w-8 after:-translate-x-4 after:translate-y-3 after:rounded after:bg-white after:transition-all after:duration-500 after:content-['']"
        ></div>
      </button>
      <nav class="hidden space-x-8 text-lg md:block" aria-label="main">
        <span class="hover:opacity-90"><%= link_to 'View Fish', fishes_path %></span>
        <% if logged_in? %>
          <span class="hover:opacity-90"><%= link_to 'AquaTanks', aquariums_path %></span>
          <span class="hover:opacity-90"><%= link_to 'My Tanks', user_path(current_user) %></span>
          <span class="hover:opacity-90"><%= link_to 'New', new_aquarium_path %></span>
          <span class="hover:opacity-90"><%= link_to 'Logout', logout_path, data:{"turbo-method": :delete} %></span>
        <% else %>
          <span class="hover:opacity-90"><%= link_to 'Login', login_path %></span>
          <span class="hover:opacity-90"><%= link_to 'Sign Up', sign_up_path %></span>
        <% end %>
      </nav>
    </div>
  </section>
  <section id="mobile-menu"
        class="top-68 justify-content-center absolute hidden w-full origin-top animate-open-menu flex-col bg-black text-5xl"
  >
    <nav class="flex min-h-screen flex-col items-center py-8" aria-label="mobile">
      <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'View Fish', fishes_path %></p>
      <% if logged_in? %>
        <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'AquaTanks', aquariums_path %></p>
        <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'My Tanks', user_path(current_user) %></p>
        <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'New', new_aquarium_path %></p>
        <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'Logout', logout_path, data:{"turbo-method": :delete} %></p>
      <% else %>
        <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'Login', login_path %></p>
        <p class="w-full py-6 text-center hover:opacity-90"><%= link_to 'Sign Up', sign_up_path %></p>
      <% end %>
    </nav>
  </section>

</header> 





