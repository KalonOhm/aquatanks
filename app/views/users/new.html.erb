<h1>New user Signup</h1>

<% form_with(model: user) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>  
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>  
    <%= form.password_field :password %>
  </div>
  <%= form.submit 'Sign Up' %>
<% end %>
